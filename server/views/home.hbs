<main>
    <section>
        <div id="slides" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <a href="/discounts" class="carousel-item text-decoration-none active" style="background-image: url('img/slide1.jpg');">
                    <div class="d-flex w-100 min-vh-100 justify-content-center align-items-center">
                        <div class="mt-5 pt-5 ff-lobster text-center t-shadow fz-xxxl">
                            <h2 class="t-resp-lg text-red">Акційна ціна</h2>
                            <p class="t-resp-md my-4 text-dark-blue">Кетчуп</p>
                            <p class="t-resp-sm text-white">-15%</p>
                        </div>
                    </div>
                    <div class="price-rnd position-absolute right-b-corner bg-danger text-white">
                        <div class="position-relative t-resp-xl">15
                            <div class="position-absolute t-resp-sm right-t-corner">99</div>
                        </div>
                    </div>
                </a>
                <a href="/discounts" class="carousel-item text-decoration-none" style="background-image: url('img/slide2.jpg');">
                    <div class="d-flex w-100 min-vh-100 justify-content-center align-items-center">
                        <div class="mt-5 pt-5 ff-lobster text-center t-shadow fz-xxxl">
                            <h2 class="t-resp-lg text-blue">Акційна ціна</h2>
                            <p class="t-resp-md my-4 text-yellow">Сухий сніданок</p>
                            <p class="t-resp-sm text-white">-10%</p>
                        </div>
                    </div>
                    <div class="price-rnd position-absolute right-b-corner bg-danger text-white">
                        <div class="position-relative t-resp-xl">25
                            <div class="position-absolute t-resp-sm right-t-corner">99</div>
                        </div>
                    </div>
                </a>
                <a href="/discounts" class="carousel-item text-decoration-none" style="background-image: url('img/slide3.jpg');">
                    <div class="d-flex w-100 min-vh-100 justify-content-center align-items-center">
                        <div class="mt-5 pt-5 ff-lobster text-center t-shadow fz-xxxl">
                            <h2 class="t-resp-lg text-orange">Акційна ціна</h2>
                            <p class="t-resp-md my-4 text-blue">Сік</p>
                            <p class="t-resp-sm text-white">-5%</p>
                        </div>
                    </div>
                    <div class="price-rnd position-absolute right-b-corner bg-danger text-white">
                        <div class="position-relative t-resp-xl">20
                            <div class="position-absolute t-resp-sm right-t-corner">99</div>
                        </div>
                    </div>
                </a>
            </div>
            <a class="carousel-control-prev" href="#slides" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon icon-sm" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#slides" role="button" data-slide="next">
                <span class="carousel-control-next-icon icon-sm" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
    <section class="products py-5">
        <h1 class="title-big mb-4">Актуальні знижки</h1>
        <div class="container">
            <ul class="products-grid row">
                {{#each dataFromDB}}
                    <li class="product col-12 col-md-6 col-lg-4">
                        <div class="product-inner">
                            <svg class="icon-sm product-icon">
                                <use xlink:href="/img/icons/icons.svg#red-pepper"></use>
                            </svg>
                            <div class="text-center">
                                <img src="{{img}}" alt="" class="product-img mb-2">
                                <div class="product-heading w-100">{{name}}</div>
                            </div>
                            <div class="product-numbers">
                                <div class="product-price">
                                    <div class="product-price-main">{{price}}</div>
                                </div>
                                <div class="product-percent">{{percent}}</div>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
            <div class="text-center">
                <a href="/discounts " class="btn btn-danger btn-lg text-uppercase">більше знижок</a>
            </div>
        </div>
    </section>
    <section class="py-5">
        <div class="container">
            <ul class="cards row list-unstyled mb-0">
                <li class="col-12 col-md-4 mb-5 mb-md-0">
                    <a class="fade-hover" href="/card">
                        <img src="img/c1.jpg" alt="news-card" class="w-100">
                    </a>
                </li>
                <li class="col-12 col-md-4 mb-5 mb-md-0">
                    <a class="fade-hover" href="/card">
                        <img src="img/c2.jpg" alt="news-card" class="w-100">
                    </a>
                </li>
                <li class="col-12 col-md-4 mb-5 mb-md-0">
                    <a class="fade-hover" href="/card">
                        <img src="img/c3.jpg" alt="news-card" class="w-100">
                    </a>
                </li>
            </ul>
        </div>
    </section>
</main>